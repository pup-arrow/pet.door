<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    <RadioGroup
        android:id="@+id/mainRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:paddingTop="4dp"
        android:background="#FFFFFFFF"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/mainRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Main"
            android:drawablePadding="4dp"
            android:textColor="@color/main_text_color"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/statisticsRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Notification"
            android:drawablePadding="4dp"
            android:textColor="@color/main_text_color" />
        <RadioButton
            android:id="@+id/personRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="Pet"
            android:drawablePadding="4dp"
            android:textColor="@color/main_text_color"/>

    </RadioGroup>

    <View
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A6DFDFDF"
        android:layout_above="@id/mainRadioGroup"/>
    <FrameLayout
        android:id="@+id/mainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainView"
        />


</RelativeLayout>
